@import 'normalize.css'
@import 'nib'
@import url("http://fonts.googleapis.com/css?family=Chelsea\+Market")

$header_width = 160px
$header_color = rgb(81, 99, 117) //rgb(22, 73, 75)
$link_color = saturate($header_color, 80%) //hsl(206, 80%, 30%)

body, html
    width 100%
    height 100%

body
    font-size 10px
    color #444
    background-color #fff
    font-family 'Helvetica Neue', Helvetica, Arial, sans-serif

.preload *
    transition none !important

body > header
    opacity 0.9
    position fixed
    right 0
    height 100%
    width 150px
    padding 50px 0
    background-color $header_color
    font-family 'Chelsea Market'
    transition opacity 0.5s
    &:hover
        opacity 1
    .logo
        width 150px
        opacity .8
        margin-bottom 30px
        img
            width 150px
            display block
        .animated-logo
            display none
        &:hover
            .static-logo
                display none
            .animated-logo
                display block
    > nav
        width 100%
        font-size 2em
        ul
            text-align right
            list-style none
            margin 0
            padding 0
            li
                margin 0.5em 0
                a 
                    color white
                    opacity 0.8
                    text-decoration none
                    transition .2s border, .5s opacity
                    border-bottom 3px solid transparent
                    &:hover
                        //color $link_color
                        opacity 1
                        border-bottom 3px solid @color

#nav-toggler 
    position absolute
    z-index 9999
    top 20px
    left -30px
    padding 10px
    margin -10px
    background-color $header_color

.symbol 
    display inline-block
    width 25px
    margin-right 10px
    span
        display block
        width 100%
        height 3px
        background-color white
        margin-bottom 6px
        border-radius 2px
    span:last-child
        margin-bottom 0

.wrapper
    padding-bottom 50px

.content
    font normal normal 1em/1.8em 'Helvetica Neue', Helvetica, Arial, sans-serif

.banner
    width 100%
    min-height 160px
    box-shadow inset 0  30px 30px -30px rgba(0, 0, 0, .75),
               inset 0 -30px 30px -30px rgba(0, 0, 0, .75)

.gallery-inner
    padding 50px 0
    text-align center
    h1, p 
        font-weight 100
    h1
        font-size 5em
        line-height 1.618
        margin 0
        padding 0
        color #444
        border none
        text-transform uppercase
    p
        font-size 3em

.banner, article.teaser
    background-size cover
    background-repeat no-repeat
    background-position center center

article
    > header 
        font-weight 100
        h1 a
            color #444
            text-decoration none
            border none
            font-weight 100

article.teaser
    width 100%
    > header
        padding 0
        min-height 150px
        position relative
        background-color rgba(255, 255, 255, .3)
        transition .5s background-color
        h1
            border-left 10px solid rgba(0, 0, 0, .2)
            margin 0
            padding 10px 100px 10px 10px
            text-transform uppercase
            font-size 3em
            line-height 1em
            position absolute
            bottom 0
            z-index 1
            transition .5s border
            a 
                font-weight 300
                hyphens auto
                text-shadow 0 1px 0 rgba(white, .5)
        .date
            text-align center
            position absolute
            right 0px
            bottom 0px
            font-size 8em
            color darken(white, 5%)
            text-shadow 0 -1px 0 rgba(0,0,0,.3)
            z-index 0
            span
                display block
                font-size 0.2em
                margin-top 1.5em

article.teaser:hover
    > header 
        background-color rgba(255, 255, 255, .5)
        h1
            border-color rgba(0, 0, 0, .5)

.cover
    cursor pointer

.cover.open
    transition height 1s

article.post
    > header
        margin 30px 0
        padding 20px 0
        position relative
        width 100%
        h1
            margin 0
            text-transform uppercase
            font-size 4em
            line-height 1em
            a
                border none
        .date
            font-size 1.5em
    
    > section
        margin-bottom 50px

    .post-content
        h1, h2, h3, h4, h5, h6
            position relative

    .post-content, .relations
        a 
            padding 1px 2px
            margin -1px 0
            color $link_color
            transition background-color 0.5s, color 0.5s
            border-radius 2px
        a:hover
            color white
            background-color $link_color
            text-decoration none
        a:active
            position relative
            top 1px

    p, ul, ol
        font-size 1.6em
        line-height 1.8em

.relations
    > div
        padding-top 1em
    p 
        margin 0

generate_custom_share_button_style(background-color)
    &:hover
        background-color background-color
        border-color darken(@background-color, 10%)

.social-actions
    text-align center
    font-size 1.8em

    a, a:visited
        line-height 3em 
        background-color #fbfbfb
        display inline-block 
        border 1px solid #ebebeb 
        border-left 0px
        color #9b9b9b
        text-decoration none 
        transition color 0.5s, background-color 0.5s, border-color 0.5s, transform

        &:first-child
            border-left 1px solid #ebebeb 
            border-top-left-radius 2px
            border-bottom-left-radius @border-top-left-radius

        &:last-child
            border-top-right-radius 2px
            border-bottom-right-radius @border-top-right-radius

        &:hover
            color white
            transform scale(1.1)

        &:active
            box-shadow inset 0 0.15em 0.3em rgba(0,0,0,0.3)

        &.facebook-share
            generate_custom_share_button_style(#175780)

        &.twitter-share
            generate_custom_share_button_style(#0faedb)

        &.google-plus-share
            generate_custom_share_button_style(#c73d00)

@media screen and (max-width: 799px)
    body > header
        padding-left  (50px / 2) 
        padding-right @padding-left
        transition padding 0.5s
    .wrapper
        transition margin 0.5s
        margin-right 150px + 50px
    article.post 
        padding-left 50px
        padding-right @padding-left
        > header .date
            margin-top 10px
    .social-actions a 
        width 33%
        box-sizing border-box

@media screen and (max-width: 600px)
    body > header
        right -190px
        transition right 1s
    body > header.open
        right 0
    .wrapper
        margin-right 10px
    article.post 
        padding-left 20px
        padding-right @padding-left

@media screen and (min-width: 800px)
    body > header
        padding-left  (150px / 2) 
        padding-right @padding-left
    .wrapper
        margin-right 300px
    #nav-toggler
        display none
    article.post 
        > header 
            position relative
            left -40px 
            padding-left 32px
            border-left 8px solid darken(white, 5%)
            &:hover
                border-color $header_color
            .date 
                text-align center
                position absolute
                font-size 6em
                right 100%
                margin-right 35px
                top 35px
                span.date-description
                    display none
                span
                    display block
                    margin-top 1em
                    font-size 0.2em    
        > section
            margin-bottom 50px
            position relative
            header 
                position absolute
                right 100%
                padding-right 30px
                h1 
                    text-align right
                    border-right 8px solid darken(white, 5%)
                    padding 20px 30px 20px 0
                    margin 0
                    font-weight 100
    .social-actions 
        a, a:visited 
            padding 0 2em

@media screen and (max-width: 1229px) and (min-width: 800px)
    article.post
        width auto
        margin 0
        margin-left 180px
    article.post
        padding-right 50px

@media screen and (min-width: 1230px)
    article.post
    article.teaser > header 
    .gallery-inner
        width 600px
        margin 0 auto
    article.teaser
        > header
            padding 0 100px


